<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".UI.HomeActivity">

    <!--
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>
    -->
    <ImageView
        android:id="@+id/textView9"
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:src="@drawable/pushmarket"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView9"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/helpMenu"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:scrollbars="vertical" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:layout_gravity="bottom|end"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="25dp"
        android:visibility="invisible"
        app:backgroundTint="@color/colorAccent2"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_barcode_scan_white_18dp" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="95dp"
        android:visibility="invisible"
        android:layout_gravity="bottom|end"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:elevation="6dp"
        app:backgroundTint="@color/colorAccent2"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_format_list_bulleted_white_18dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:clickable="true"
        android:src="@drawable/ic_cart_plus_white_18dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:backgroundTint="@color/colorAccent"
        app:elevation="9dp"
        app:pressedTranslationZ="15dp"
        app:layout_anchorGravity="bottom|right|end"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/enviar"
        android:layout_marginBottom="50dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/ic_enviar"
        android:background="@color/colorAccent2"/>
</RelativeLayout>